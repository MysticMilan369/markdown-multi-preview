{
  "name": "markdown-multi-preview",
  "displayName": "Markdown Multi Preview",
  "description": "Preview multiple Markdown files simultaneously in independent webview panels with syntax highlighting",
  "version": "0.0.1",
  "publisher": "mysticmilan369",
  "author": {
    "name": "Mystic Milan"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mysticmilan369/markdown-multi-preview"
  },
  "bugs": {
    "url": "https://github.com/mysticmilan369/markdown-multi-preview/issues"
  },
  "homepage": "https://github.com/mysticmilan369/markdown-multi-preview#readme",
  "engines": {
    "vscode": "^1.107.0"
  },
  "categories": [
    "Other",
    "Visualization"
  ],
  "keywords": [
    "markdown",
    "preview",
    "multi",
    "multiple",
    "syntax highlighting"
  ],
  "activationEvents": [
    "onCommand:markdown-multi-preview.openPreview",
    "onLanguage:markdown"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "markdown-multi-preview.openPreview",
        "title": "Markdown Multi Preview: Open Preview"
      }
    ],
    "keybindings": [
      {
        "command": "markdown-multi-preview.openPreview",
        "key": "ctrl+alt+v",
        "mac": "cmd+alt+v",
        "when": "editorLangId == markdown"
      }
    ],
    "configuration": {
      "title": "Markdown Multi Preview",
      "properties": {
        "markdownMultiPreview.fontSize": {
          "type": "number",
          "default": 16,
          "minimum": 10,
          "maximum": 32,
          "description": "Font size for the Markdown preview (in pixels)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/markdown-it": "^14.1.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.107.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.27.1",
    "eslint": "^9.39.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1"
  },
  "dependencies": {
    "highlight.js": "^11.11.1",
    "markdown-it": "^14.1.0"
  }
}
